{
  "name": "rag",
  "private": true,
  "workspaces": [
    "host",
    "mf-repos",
    "mf-chat",
    "shared"
  ],
  "scripts": {
    "dev": "run-p dev:shared dev:repos dev:chat dev:host",
    "dev:shared": "npm --workspace shared run build:watch",
    "dev:repos": "npm --workspace mf-repos run dev",
    "dev:chat": "npm --workspace mf-chat run dev",
    "dev:host": "npm --workspace host run dev",
    "build": "run-p -s build:shared build:repos build:chat build:host",
    "build:shared": "npm --workspace shared run build:watch",
    "build:host": "npm --workspace host run preview",
    "build:repos": "npm --workspace mf-repos run preview",
    "build:chat": "npm --workspace mf-chat run preview"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8"
  }
}
